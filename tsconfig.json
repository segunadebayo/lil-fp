{
  "exclude": ["node_modules"],
  "include": ["src"],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "es2020",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "preserveSymlinks": true
  }
}
